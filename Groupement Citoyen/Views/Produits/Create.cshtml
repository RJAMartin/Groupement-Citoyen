@model Groupement_Citoyen.ViewModel.ProduitCreationVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produit.Nom" class="control-label"></label>
                <input asp-for="Produit.Nom" class="form-control" />
                <span asp-validation-for="Produit.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Quantite" class="control-label"></label>
                <input asp-for="Produit.Quantite" class="form-control" />
                <span asp-validation-for="Produit.Quantite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Prix" class="control-label"></label>
                <input asp-for="Produit.Prix" class="form-control" />
                <span asp-validation-for="Produit.Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Description" class="control-label"></label>
                <input asp-for="Produit.Description" class="form-control" />
                <span asp-validation-for="Produit.Description" class="text-danger"></span>
            </div>
            <table>
                <th>
                    @Html.DisplayNameFor(model => model.Producteur.Nom)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Producteur.Nom)
                </td>
            </table>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
